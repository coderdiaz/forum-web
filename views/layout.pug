doctype html
html
  head
    title Floarum
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Miriam+Libre:400,700|Source+Sans+Pro:400,700,600,400italic,700italic')
  body
    div#app
      header.header
        div.container
          nav(class="navbar")
            a(href="/", class="navbar-brand")
              img(src="https://cdn3.iconfinder.com/data/icons/free-mix/128/business_office_seo_finance_work_coffee_pause_management-07-512.png", width="35")
              span.page-title Floarum
            ul(class="nav nav-custom justify-content-end")
              if user
                li(class="nav-item") 
                 a(class="nav-link", href="#") Welcome, #{user.name}
                li(class="nav-item")
                  a(class="nav-link", href="/auth/logout") Logout
              else
                li(class="nav-item")
                  a(class="nav-link", href="/signup")="Sign Up"
                li(class="nav-item")
                  a(class="nav-link", href="/signin")="Login"
      section.section-info
        div.container
          nav(class="navbar")
            span(class="navbar-brand") Threads
            ul(class="nav nav-custom justify-content-end")
              li(class="nav-item")
                  input(class="form-control", placeholder="Search for threads...")
      main(class="main p-5")
        div.container
          block content
      footer(class="footer text-center p-5")    
        span Crafted with Node, Express, Mongoose, Pug and Firebase Auth
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    block scripts